def soma(num1, num2):
    return num1 + num2

def subtracao(num1, num2):
    return num1 - num2

def divisao(num1, num2):
    if num2 != 0:
        return num1 / num2
    else:
        return "Divisão por zero não é definida"

def multiplicacao(num1, num2):
    return num1 * num2

# Função principal para interagir com o usuário
def main():
    # Solicitar ao usuário que digite dois números
    num1 = float(input("Digite o primeiro número: "))
    num2 = float(input("Digite o segundo número: "))
    
    # Calcular e exibir os resultados das operações
    print(f"Soma: {soma(num1, num2)}")
    print(f"Subtração: {subtracao(num1, num2)}")
    print(f"Divisão: {divisao(num1, num2)}")
    print(f"Multiplicação: {multiplicacao(num1, num2)}")

# Chamar a função principal para iniciar o programa
main()
