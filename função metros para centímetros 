def metros_para_centimetros(metros):
    centimetros = metros * 100  # 1 metro = 100 centímetros
    return centimetros

# Função principal para interagir com o usuário
def main():
    # Solicitar ao usuário que digite um valor em metros
    metros = float(input("Digite um valor em metros: "))
    
    # Chamar a função para converter metros em centímetros
    resultado_centimetros = metros_para_centimetros(metros)
    
    # Exibir o resultado da conversão
    print(f"{metros} metros equivalem a {resultado_centimetros} centímetros.")

# Chamar a função principal para iniciar o programa
main()
