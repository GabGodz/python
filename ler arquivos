class Pessoa:
    def __init__(self, nome, idade, peso, altura):
        self.nome = nome
        self.idade = idade
        self.peso = peso
        self.altura = altura

    def salvar_dados(self):
        with open("Dados_pessoais.txt", "w") as arquivo:
            arquivo.write(f"Nome: {self.nome}\n")
            arquivo.write(f"Idade: {self.idade}\n")
            arquivo.write(f"Peso: {self.peso}\n")
            arquivo.write(f"Altura: {self.altura}\n")

def ler_dados():
    with open("Dados_pessoais.txt", "r") as arquivo:
        dados = arquivo.readlines()
        for linha in dados:
            print(linha.strip())

def main():
    nome = input("Digite seu nome: ")
    idade = input("Digite sua idade: ")
    peso = input("Digite seu peso: ")
    altura = input("Digite sua altura: ")

    pessoa = Pessoa(nome, idade, peso, altura)
    pessoa.salvar_dados()

    print("\nDados salvos com sucesso!")
    
    print("\nLendo os dados salvos:")
    ler_dados()

if __name__ == "__main__":
    main()
