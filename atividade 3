# Inicializar contadores
pares = 0
impares = 0
positivos = 0
negativos = 0
quantidade_numeros = 0

# Solicitar 5 números ao usuário
for _ in range(5):
    numero = int(input("Digite um número inteiro: "))
    quantidade_numeros += 1
    
    # Contar números pares e ímpares
    if numero % 2 == 0:
        pares += 1
    else:
        impares += 1
    
    # Contar números positivos e negativos
    if numero > 0:
        positivos += 1
    elif numero < 0:
        negativos += 1

# Exibir os resultados
print(f"\nQuantidade de números pares: {pares}")
print(f"Quantidade de números ímpares: {impares}")
print(f"Quantidade de números positivos: {positivos}")
print(f"Quantidade de números negativos: {negativos}")
print(f"Total de números inseridos: {quantidade_numeros}")
